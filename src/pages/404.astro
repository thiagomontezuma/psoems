---
import Layout from '../layouts/Layout.astro';

const pageInfo = {
    title: 'Psoems — 404 Not Found',
    description: 'Page was not found in our directory',
    robots: 'noindex, nofollow',
    canonical: '/',
    imageURL: '/images/',
    url: Astro.url
}
// const title = 'Psoems — 404 Not Found';
// const description = 'Page was not found in our directory';
// const robots = 'noindex, nofollow';
// title={title} description={description} url={Astro.url} robots={robots}
---
<Layout pageInfo={pageInfo}>
    <article class="py-12 lg:py-20 max-w-screen-xl mx-auto px-6 sm:px-4">
        <header class="mx-auto max-w-screen-md text-center">
            <h1 class="text-4xl font-bold mb-4">Page Not Found</h1>
            <p>This page does not exist in our directories, please try another URL or go to back to our <a href="/" class="underline underline-offset-4">homepage</a></p>
        </header>
    </article>
</Layout>