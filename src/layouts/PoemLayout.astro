---
import Head from '../components/Head.astro';
import Nav from '../components/Nav.astro';
import Poem from '../components/Poem.astro';
import Footer from '../components/Footer.astro';
const {content} = Astro.props;
const {title, description, SEOTitle, SEODescription, robots, pubDate, author, heroImage, heroVideo, updDate, permalink, alt, h2Tags, h3Tags, sidebarLinks, shorts} = content;
---
<html lang="en">
    <head>
        <Head title={SEOTitle && SEOTitle !== "" ? SEOTitle : title} description={SEODescription && SEODescription !== "" ? SEODescription : description} image={heroImage} robots={robots}></Head>
    </head>
    <body class="light font-body leading-normal personality-casual">
        <Nav></Nav>
        <Poem title={title} author={author} description={description} heroImage={heroImage} heroVideo={heroVideo} pubDate={pubDate} updDate={updDate} alt={alt} h2Tags={h2Tags} h3Tags={h3Tags} sidebarLinks={sidebarLinks} shorts={shorts}>
            <slot />
        </Poem>
        <Footer></Footer>
        <script is:inline src="/js/changeStyleMode.js"></script>
    </body>
</html>

