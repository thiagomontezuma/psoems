---
const { post, url } = Astro.props;
---
<div class="mb-4">
    <a href={post.url}>
        <img src={post.frontmatter.postImage} class="w-full" alt="Lesson Image Card" width="1280" height="720" loading="lazy">
    </a>
</div>
<div>
    <a href={post.url}>
        {url.includes('/poems') ? <h2 class="text-xl font-bold">{post.frontmatter.title}</h2> : <h3 class="text-xl font-bold">{post.frontmatter.title}</h3>}
    </a>
    <p>{post.frontmatter.description}</p>
